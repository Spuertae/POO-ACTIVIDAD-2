import math

def calcular_propiedades_triangulo(lado_a, lado_b, lado_c):
   if lado_a + lado_b <= lado_c or lado_a + lado_c <= lado_b or lado_b + lado_c <= lado_a:
       return None, None, None 

   perimetro = lado_a + lado_b + lado_c

   semiperimetro = perimetro / 2

   area = math.sqrt(semiperimetro * (semiperimetro - lado_a) *
                       (semiperimetro - lado_b) * (semiperimetro - lado_c))

   return perimetro, semiperimetro, area

lado_a = float(input("Ingrese la longitud del lado a en cm: "))
lado_b = float(input("Ingrese la longitud del lado b en cm: "))
lado_c = float(input("Ingrese la longitud del lado c en cm: "))

resultado = calcular_propiedades_triangulo(lado_a, lado_b, lado_c)

if resultado[0] is not None:
 perimetro, semiperimetro, area = resultado
 print(f"Perímetro:{perimetro:.1f} cm ")
 print(f"Semiperímetro:{semiperimetro:.1f} cm")
 print(f"Área:{area:.1f} cm")
else:
 print("Los lados ingresados no forman un triángulo válido.")


